{
  "name": "learn-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "A React project setup with Vite, TypeScript, and ESLint",
  "keywords": [
    "react",
    "vite",
    "typescript",
    "eslint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/diwashbhattarai999/nextjs-frontend-template.git"
  },
  "author": "UpchaarNepal",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "fix-all": "pnpm lint:fix && pnpm format",
    "type-check": "tsc --noEmit --incremental",
    "upgrade": "npx npm-check-updates -u && pnpm install",
    "prepare": "husky",
    "docker:build": "docker build -t upn-clinic-app:prod .",
    "docker:run": "docker run --name upn-clinic-app -p 8080:8080 upn-clinic-app:prod"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.0.16",
    "@tanstack/react-query": "^5.69.0",
    "@tanstack/react-table": "^8.21.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "axios": "^1.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.484.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-hook-form": "^7.54.2",
    "react-router": "^7.4.0",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.16",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tw-animate-css": "^1.2.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=18.20.3",
    "pnpm": ">=10"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm run lint:fix",
      "pnpm run format"
    ],
    "*.{json,md}": [
      "pnpm run format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
